         @model DogGo.Models.Walker

@{
    ViewData["Title"] = "Details";
}

<div>
    <h1 class="mb-4">Walker Profile</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="@Model.ImageUrl" />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood</label>
            <span>@Model.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container">
            <h1 class="text-left">Recent Walks</h1>
            <table class="table table-bordered table-responsive table-hover">
                <tr>
                    <th>Date</th>
                    <th>Client </th>
                    <th>Duration</th>
                </tr>
                @foreach (Walk walks in Model.Walks)
                {
                    <tr>
                        <td>@walks.Date.ToShortDateString()</td>
                        <td>@walks.Dog.Owner.Name</td>
                        <td>@walks.Duration mins</td>
                    </tr>

                }
            </table>
</section>

        <section class="col-lg-4 col-md-8 container mt-5">
            <h1>Total Walk Time</h1>
            <ul class="list-group mt-4">
                @Model.Walks.Sum(s => s.Duration);
            </ul>
        </section>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
